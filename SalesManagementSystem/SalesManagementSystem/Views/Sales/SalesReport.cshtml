@model IEnumerable<SalesManagementSystem.Models.Sales>

@{
    ViewBag.Title = "SalesReport";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}
<hr />
<hr />
<hr />
<hr />
<hr />
<h2 class="text-center text-primary">Sales Report</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SelectProduct)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SelectProduct)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditSale", new { id = item.OrderId }) |
                            @Html.ActionLink("Details", "DetailSale", new { id = item.OrderId }) |
                            @Html.ActionLink("Delete", "DeleteSale", new { id = item.OrderId })
                        </td>
                    </tr>
                }

            </table>
</div></div></div>